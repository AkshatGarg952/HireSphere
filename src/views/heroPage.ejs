            if (text.includes('login as applicant')) {
              formId = 'applicantLogin';
            } else if (text.includes('login as recruiter')) {
              formId = 'recruiterLogin';
            } else if (text.includes('register as applicant')) {
              formId = 'applicantRegister';
            } else if (text.includes('register as recruiter')) {
              formId = 'recruiterRegister';
            }

            if (formId) {
              showForm(formId);
            }
            
            // Close the dropdown
            this.closest('.register-dropdown').classList.remove('active');
          });
        });

