      .register-options {
  display: none; /* Initially hidden */
  list-style: none;
  padding: 0;
  background: white;
  border: 1px solid #ccc;
  position: absolute;
  width: 200px;
  box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
}

.register-options li {
  padding: 0; /* Remove padding from <li> */
}

.register-options a {
  display: block; /* Make the <a> cover the entire <li> */
  width: 100%; 
  padding: 10px; /* Move padding here */
  color: #333;
  text-decoration: none;
}

.register-options a:hover {
  background: #f0f0f0;
}

.register-options li:hover {
  background: #f0f0f0;
}

/* Show the options when the 'active' class is added */
.register-dropdown.active .register-options {
  display: block;
}

      
