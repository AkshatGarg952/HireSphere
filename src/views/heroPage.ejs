          grid-template-columns: repeat(4, 1fr);
        }
      
        .job__grid {
          grid-template-columns: repeat(3, 1fr);
        }
      
        .offer__grid {
          grid-template-columns: repeat(3, 1fr);
        }
      
        .footer__container {
          grid-template-columns: repeat(5, 1fr);
        }
      
        .footer__col:nth-child(1) {
          grid-column: 1/3;
        }
      }
      
